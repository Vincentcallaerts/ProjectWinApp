<Window x:Class="ProjectWinApp.LoggedInOptions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectWinApp"
        mc:Ignorable="d"
        Title="LoggedInOptions" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Height="390">
            <Button>DataBeheer</Button>
            <Button>Overzicht</Button>
            <Button>Bestellingen</Button>
        </StackPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="tbInfo"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
