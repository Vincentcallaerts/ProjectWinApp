<Page x:Class="ProjectWinApp.SeeCustomers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectWinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SeeCustomers">

    <StackPanel Background="White" Margin="10,0,10,0">
        <ListBox x:Name="lbCustomers" MinWidth="200" MaxHeight="300" MinHeight="32" Margin="30,0,50,0" SelectedValuePath="Id">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Content}"></Label>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</Page>
