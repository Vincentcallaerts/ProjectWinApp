<Page x:Class="ProjectWinApp.AddMagazijn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectWinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddMagazijn">

    <StackPanel Background="White">

        <Label>Eigenaar</Label>
        <ComboBox x:Name="cmbRole" SelectedValuePath="Id">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="{Binding Content}"></Label>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label>Adress</Label>
        <TextBox Margin="0,0,0,10" x:Name="tbAdress"></TextBox>

        <Button x:Name="btnAddUser" Click="btnAddUser_Click">Add Magazijn</Button>
    </StackPanel>
</Page>
