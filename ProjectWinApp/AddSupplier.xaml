<Page x:Class="ProjectWinApp.AddSupplier"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectWinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddSupplier">

    <StackPanel HorizontalAlignment="Center" Background="White">

        <Label>Supplier Name</Label>
        <TextBox x:Name="tbName"></TextBox>
        <Label>Supplier Email</Label>
        <TextBox x:Name="tbEmail"></TextBox>
        <Button x:Name="btnAddSupplier" Click="btnAddSupplier_Click" Margin="0,10,0,0">Add Supplier</Button>

    </StackPanel>
</Page>
