<Page x:Class="ProjectWinApp.Orders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectWinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Orders">

    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="160" Background="AliceBlue">
            <Label BorderBrush="Black" BorderThickness="2" Margin="0,0,0,10">Orders</Label>
            <Button x:Name="btnSeeIncommingOrder" Click="btnSeeIncommingOrder_Click">See Incomming Orders</Button>
            <Button x:Name="btnSeeOutgoingOrder" Click="btnSeeOutgoingOrder_Click">See Outgoing Orders</Button>
            <Button x:Name="btnAddProductMagazijn" Click="btnAddProductMagazijn_Click">Update Product Warehouse</Button>
            <Button x:Name="btnAddOrder" Click="btnAddOrder_Click">Add Order</Button>

        </StackPanel>
        <Frame x:Name="fOrders" DockPanel.Dock="Right" Width="650" Background="White" NavigationUIVisibility="Hidden"></Frame>

    </DockPanel>
</Page>
