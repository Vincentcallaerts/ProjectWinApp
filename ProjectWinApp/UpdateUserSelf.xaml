<Page x:Class="ProjectWinApp.UpdateUserSelf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectWinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UpdateUserSelf">

    <StackPanel Background="White" HorizontalAlignment="Center">
        <Label>First Name</Label>
        <TextBox x:Name="tbFirst"></TextBox>
        <Label>Last Name</Label>
        <TextBox x:Name="tbLast"></TextBox>
        <Label>Email</Label>
        <TextBox x:Name="tbEmail"></TextBox>
        <Button Margin="0,10,0,0" x:Name="btnUpdate" Click="btnUpdate_Click">Update</Button>
    </StackPanel>
</Page>
