<Page x:Class="ProjectWinApp.AddCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectWinApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCustomer">

    <StackPanel Background="White">

        <Label>Customer Name</Label>
        <TextBox x:Name="tbfirst"></TextBox>
        <Label>Customer Email</Label>
        <TextBox x:Name="tbemail"></TextBox>
        <Button x:Name="btnAddCustomer" Click="btnAddCustomer_Click">Add Customer</Button>
        
    </StackPanel>
</Page>
